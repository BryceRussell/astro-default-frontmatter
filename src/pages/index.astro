---
let posts = await Astro.glob('../content/*.md');
---

{ posts.map((post) => {
  return (
    <div style="display:flex;flex-direction:column;gap:0.5rem;margin:.5rem;padding:.5rem;border:1px solid black;">
      <Fragment set:html={post.compiledContent()} />
      <h3>Frontmatter:</h3>
      <code set:text={JSON.stringify(post.frontmatter)}></code>
    </div>
  )
})}

<style is:global>
  h1, h3, p {
    margin: 0;
  }
  code {
    padding: 2px;
    background-color: #eee;
  }
</style>